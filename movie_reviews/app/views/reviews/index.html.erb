<h1>Smelly Potatoes Reviews</h1>

<h3>Create A Review</h3>

<%= form_for @review, remote: true do |f| %>
  <%= f.label :reviewer_name %>
  <%= f.text_field :reviewer_name %>
  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :review_text %>
  <%= f.text_field :review_text %>
  <br>
  <%= f.label :movie_id %>
  <%= f.select :movie_id, Movie.all.collect { |movie| [movie.title, movie.id] } %>
  <br>
  <%= f.submit %>
<% end %>

<h3>All Reviews</h3>

<table>
  <thead>
    <th>Movie</th>
    <th>Reviewer</th>
    <th>Title</th>
    <th>Review Text</th>
    <th>Review Date</th>
    <th>Delete</th>
  </thead>
  <tbody id="review-list">
    <%= render @reviews %>
  </tbody>
</table>
